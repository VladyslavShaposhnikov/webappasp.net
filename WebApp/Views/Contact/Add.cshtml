@model ContactModel
@{
    ViewBag.Titlt = "Add Contact";
    Layout = "_Layout";
}

<h2>Add Contact</h2>

<form asp-action="Add" asp-controller="Contact" method="post">
    <div class="mb-3">
        <label class="form-label" asp-for="FirstName">Name:</label>
        <input class="form-control" asp-for="FirstName" />
        <span class="text-danger" asp-validation-for="FirstName"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="LastName">Last Name:</label>
        <input class="form-control" asp-for="LastName" />
        <span class="text-danger" asp-validation-for="LastName"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Email">Email:</label>
        <input class="form-control" asp-for="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="PhoneNumber">Phone number:</label>
        <input class="form-control" asp-for="PhoneNumber" />
        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="BirthDate">Birthday:</label>
        <input class="form-control" asp-for="BirthDate" />
        <span class="text-danger" asp-validation-for="BirthDate"></span>
    </div>

    <div class="mb-3">
        <button class="btn btn-primary" type="submit">Add contact</button>
    </div>
</form>