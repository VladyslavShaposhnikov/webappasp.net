@model System.Collections.Generic.Dictionary<int, WebApp.Models.ContactModel>

@{
    ViewBag.Title = "Contact Page";
    Layout = "_Layout";
}

<h2>
    Contacts
</h2>

<a class="btn btn-primary" asp-action="Add" asp-controller="Contact">Add Contact</a>
<h4>Contact List</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Surname
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Model)
        {
            <tr>
                <td>
                    @entry.Value.FirstName
                </td>
                <td>
                    @entry.Value.LastName
                </td>
                <td>
                    <a class="btn btn-success" asp-controller="Contact" asp-action="Edit" asp-route-id="@entry.Key">Edit</a> @* ???? *@
                    <a class="btn btn-info" asp-controller="Contact" asp-action="Info" asp-route-id="@entry.Key">Info</a>
                    <a class="btn btn-danger" asp-controller="Contact" asp-action="Delete" asp-route-id="@entry.Key">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>